    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.2",
    "prisma": "^6.3.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0"
  }
