{
  "name": "node-express-prisma-starter-template",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "pm2-runtime start dist/server.js -i max",
    "build": "esbuild src/server.ts --bundle --platform=node --packages=external --outfile=dist/server.js --format=esm",
    "dev:esbuild": "pnpm run build --watch",
    "dev:pm2": "pm2-runtime start dist/server.js --watch",
    "dev": "run-p dev:*",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint --max-warnings 0 .",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.3.1",
    "chalk": "^5.4.1",
