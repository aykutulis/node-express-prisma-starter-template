    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "helmet": "^7.2.0",
    "http-status-codes": "^2.3.0",
    "morgan": "^1.10.0",
    "pm2": "^5.4.3",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/cors": "^2.8.17",
